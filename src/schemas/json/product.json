{
  "$id": "product.json",
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "required": ["id", "name", "price", "description", "stock"],
  "additionalProperties": false,
  "properties": {
    "id": { "type": "number" },
    "name": { "type": "string" },
    "price": { "type": "number" },
    "description": { "type": "string" },
    "stock": { "type": "number" },
    "allergy": { "type": ["string", "null"] }
  }
}
